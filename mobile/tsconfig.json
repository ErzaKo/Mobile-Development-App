{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "expo-router.d.ts"
  ]
}
